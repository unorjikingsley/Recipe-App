<%= stylesheet_link_tag "foods" %>

<h1 class="recipes_header">Foods</h1>

<div id="foods">
 <button><%= link_to "Add food", new_food_path, class: "add-food" %> </button>
  <table>
    <thead>
      <tr>
        <th>Food</th>
        <th>Measurement</th>
        <th>Unit Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <% @foods.each do |food| %>
      <%= render food %>
    <% end %>
  </table>
</div>



<%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "destroy" %>
